@model Lagerverwaltung.Database.Product

@{
    ViewData["Title"] = "Produkt erstellen";
}

<h1>Produkt erstellen</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InStorage" class="control-label"></label>
                <input asp-for="InStorage" class="form-control" />
                <span asp-validation-for="InStorage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentSellPrice" class="control-label"></label>
                <input asp-for="CurrentSellPrice" class="form-control" type="number"/>
                <span asp-validation-for="CurrentSellPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Erstellen" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-secondary">Zurück</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
